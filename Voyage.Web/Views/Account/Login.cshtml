@model Voyage.Core.Exceptions.NotFoundException

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login</title>
</head>
<body>
    <h1>Authorization Server</h1>
    <form method="POST">
        <h2>Forms Login</h2>
        <ul>
            <li>
                <label for="username">User name: </label>
                <input type="text" id="username" name="username"/>
            </li>
            <li>
                <label for="password">Password: </label>
                <input type="password" id="password" name="password"/>
            </li>
            <li>
                <input type="checkbox" id="isPersistent" name="isPersistent"/>
                <label for="isPersistent">Remember Me</label>
                <input type="submit" name="submit.Signin" value="Sign In"/>
            </li>
        </ul>
        @if (Model != null)
        {
            <div style="color:lightcoral">Login failed</div>
        }
    </form>
</body>
</html>
